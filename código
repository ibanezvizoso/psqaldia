<body>

<header>
    <div class="brand">PSQALDÍA</div>
</header>

<div class="container">
    <div class="search-area">
        <input type="text" id="search" placeholder="Buscar guías, escalas, recursos..." oninput="filter()">
    </div>

    <div id="app">
        <div class="skeleton"></div>
        <div class="skeleton"></div>
        <div class="skeleton"></div>
    </div>
</div>

<div id="modal" class="modal" onclick="closeModal()">
    <div class="modal-content" onclick="event.stopPropagation()">
        <button class="close-modal" onclick="closeModal()"><i class="fas fa-times"></i></button>
        <div id="modalData"></div>
    </div>
</div>

<script>
    const API_KEY = 'AIzaSyDgMOlwLqa6f01AB4oHDPjjZDXgHLGbFig';
    const SHEET_ID = '18tWsnm5_hUN6oDA-DpzXMJMgIffcMkOJOyr8ugoLgEY';
    const RANGE = 'A2:Z100'; // Ajusta según tu hoja

    let db = [];

    async function loadData() {
        try {
            const url = `https://sheets.googleapis.com/v4/spreadsheets/${SHEET_ID}/values/${RANGE}?key=${API_KEY}`;
            const response = await fetch(url);
            const data = await response.json();
            
            // Transformar array de arrays a array de objetos usando la primera fila como cabecera si es necesario
            // Como empezamos en A2, asumo que tienes un orden fijo: 0:id, 1:Categoría, 2:Título, 3:Resumen, 4:Link, 5:Imagen, 6:Fecha
            db = data.values.map(row => ({
                id_p: row[0],
                categoria: row[1],
                titulo: row[2],
                resumen: row[3],
                link: row[4],
                imagen: row[5],
                fecha: row[6]
            }));
            render(db);
        } catch (e) {
            document.getElementById('app').innerHTML = `<p style="text-align:center; color:red;">Error al cargar datos. Revisa la clave API y el acceso al Excel.</p>`;
        }
    }

    function filter() {
        const q = document.getElementById('search').value.toLowerCase();
        const filtered = db.filter(i => 
            (i.titulo || '').toLowerCase().includes(q) || 
            (i.resumen || '').toLowerCase().includes(q) ||
            (i.categoria || '').toLowerCase().includes(q)
        );
        render(filtered);
    }

    function getTagColor(cat) {
        const colors = {
            'ESCALAS': '#dbeafe', 'GUÍAS': '#dcfce7', 'FÁRMACOS': '#fee2e2', 'GENERAL': '#f3e8ff'
        };
        return colors[cat?.toUpperCase()] || '#e2e8f0';
    }

    function render(data) {
        const app = document.getElementById('app');
        app.innerHTML = '';
        data.forEach(item => {
            const card = document.createElement('div');
            card.className = 'card';
            card.onclick = () => openModal(item.id_p);
            
            const waText = encodeURIComponent(`*${item.titulo}*\n${item.link}`);
            
            card.innerHTML = `
                <img src="${item.imagen || 'https://via.placeholder.com/400x200?text=PSQ'}" loading="lazy">
                <div class="card-content">
                    <span class="tag" style="background:${getTagColor(item.categoria)}">${item.categoria || 'Recurso'}</span>
                    <div class="tit">${item.titulo || 'Sin título'}</div>
                    <div class="res">${item.resumen || ''}</div>
                    <div class="card-actions">
                        <a href="${item.link}" target="_blank" class="btn btn-primary" onclick="event.stopPropagation()">VER RECURSO</a>
                        <a href="https://api.whatsapp.com/send?text=${waText}" target="_blank" class="btn btn-wa" onclick="event.stopPropagation()"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
            `;
            app.appendChild(card);
        });
    }

    function openModal(id) {
        const item = db.find(x => x.id_p === id);
        const modalData = document.getElementById('modalData');
        const waText = encodeURIComponent(`*${item.titulo}*\n${item.link}`);
        
        modalData.innerHTML = `
            <img src="${item.imagen}" style="width:100%; height:250px; object-fit:cover;">
            <div class="modal-body">
                <span class="tag" style="background:${getTagColor(item.categoria)}">${item.categoria}</span>
                <h2 style="margin: 0.5rem 0 1rem; font-size:1.75rem;">${item.titulo}</h2>
                <p style="color:var(--text-muted); font-size:1rem; line-height:1.7; margin-bottom:2rem;">${item.resumen}</p>
                <div class="card-actions">
                    <a href="${item.link}" target="_blank" class="btn btn-primary" style="padding:1rem;">ABRIR RECURSO COMPLETO</a>
                    <a href="https://api.whatsapp.com/send?text=${waText}" target="_blank" class="btn btn-wa" style="flex:none; width:60px;"><i class="fab fa-whatsapp"></i></a>
                </div>
            </div>
        `;
        document.getElementById('modal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeModal() {
        document.getElementById('modal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    loadData();
</script>

</body>
</html>
